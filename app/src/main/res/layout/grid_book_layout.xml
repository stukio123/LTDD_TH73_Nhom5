<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bogoc_cobackground"
    android:elevation="8dp"
    android:layout_marginBottom="3dp">

    <TextView
        android:id="@+id/grid_book_layout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="title"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/grid_book_layout_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_book_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_book_layout_title">

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_columnWeight="1"
            />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_columnWeight="1" />

        <include
            layout="@layout/horizontal_scroll_item_layout"
            app:layout_columnWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/grid_book_layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Xem ThÃªm"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/grid_book_layout_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_book_layout_title" />

</androidx.constraintlayout.widget.ConstraintLayout>