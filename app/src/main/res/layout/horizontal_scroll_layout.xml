<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:id="@+id/linearlayoutFlashSale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc_footder"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            app:srcCompat="@mipmap/flash" />

        <TextView
            android:id="@+id/txt_gio"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/Background"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textAlignment="center"
            android:textColor="@color/Background"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_phut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/Background"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/Background"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_giay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/Background"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txt_XTFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:gravity="center|right"
            android:text="XEM THÃŠM"
            android:textColor="@color/Background"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bogoc_header"
        app:layout_constraintTop_toBottomOf="@+id/linearlayoutFlashSale"
        tools:layout_editor_absoluteX="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_scroll_layout_recycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>