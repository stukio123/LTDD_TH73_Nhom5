<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="50"
        android:centerColor="#d62976"
        android:endColor="#4f5bd5"
        android:startColor="#feda75"
        android:type="linear" />

    <!-- Set màu nền-->
    <solid
        android:color="#4A2BE6"
        >
    </solid>


    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp">
    </corners>

</shape>